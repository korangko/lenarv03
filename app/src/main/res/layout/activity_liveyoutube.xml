<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.05"
        android:src="@drawable/lenar2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/menu_before_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:padding="10dp"
        android:src="@drawable/ic_before"
        app:layout_constraintBottom_toBottomOf="@+id/textView14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView14" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/robotolight"
        android:gravity="center"
        android:text="STRAMING SETTING"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textView14">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="30dp"
                android:layout_weight="1"
                android:fontFamily="@font/robotolight"
                android:gravity="start"
                android:text="Account"
                android:textColor="@color/white"
                android:textSize="12dp" />

            <com.google.android.gms.common.SignInButton
                android:id="@+id/sign_in_button"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/google_account_text"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_marginEnd="25dp"
                android:layout_weight="1"
                android:background="@drawable/shape_color_roundsquare2"
                android:fontFamily="@font/robotolight"
                android:gravity="center"
                android:text="josh@gmail.com"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="30dp"
                android:layout_weight="1"
                android:fontFamily="@font/robotolight"
                android:gravity="start"
                android:text="Live Stream Title"
                android:textColor="@color/white"
                android:textSize="12dp" />


            <EditText
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_marginEnd="25dp"
                android:layout_weight="1"
                android:background="@drawable/shape_color_roundsquare2"
                android:fontFamily="@font/robotolight"
                android:gravity="center"
                android:textColor="@color/white"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="30dp"
                android:layout_weight="3"
                android:fontFamily="@font/robotolight"
                android:gravity="start"
                android:text="Resolution"
                android:textColor="@color/white"
                android:textSize="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_marginEnd="25dp"
                android:layout_weight="1"
                android:background="@drawable/shape_color_roundsquare2"
                android:fontFamily="@font/robotolight"
                android:gravity="center"
                android:text="1440P"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="30dp"
                android:layout_weight="3"
                android:fontFamily="@font/robotolight"
                android:gravity="start"
                android:text="Bitrate"
                android:textColor="@color/white"
                android:textSize="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_marginEnd="25dp"
                android:layout_weight="1"
                android:background="@drawable/shape_color_roundsquare2"
                android:fontFamily="@font/robotolight"
                android:gravity="center"
                android:text="16M"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:visibility="visible" />

        </LinearLayout>


    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/live_start_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="80dp"
        android:background="@drawable/shape_color_roundsquare"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fallingsky"
            android:text="Go LIVE"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>